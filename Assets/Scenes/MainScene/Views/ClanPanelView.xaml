                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Expander>
        <Expander Background="Tan" Header="My2 Expander">
            <TextBlock TextWrapping="Wrap">
            Lorem ipsum dolor sit amet, consectetur
