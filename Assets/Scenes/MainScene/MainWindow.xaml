                        <system:String>Item #2</system:String>
                        <system:String>Item #3</system:String>
                        <system:String>Item #4</system:String>
                        <system:String>Item #5</system:String>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Grid></Grid>
        </DockPanel>
    </Viewbox>
</UserControl>
